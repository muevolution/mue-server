{
  "name": "@mue/server",
  "version": "1.0.0",
  "description": "Multi User Evolution Server",
  "author": "Kauko <kauko@biosynth.link>",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.cloud.neocodenetworks.org"
  },
  "main": "build/app.js",
  "scripts": {
    "start": "node build/app.js",
    "debug": "node --inspect build/app.js",
    "build": "npm-run-all build:ts",
    "build:ts": "tsc -b .",
    "build:watch": "tsc -b . --watch",
    "build:clean": "rm -rf build",
    "build:lint": "tslint -p .",
    "build:run": "concurrently \"npm run build:watch\" \"nodemon\"",
    "test": "NODE_ENV=test nyc mocha",
    "test:upload": "npm-run-all test",
    "activity-monitor": "node build/tools/activity-monitor.js",
    "redeploy-scripts": "node build/tools/init-reload-scripts.js"
  },
  "dependencies": {
    "bluebird": "^3.5.4",
    "express": "^4.16.4",
    "express-async-await": "^1.1.0",
    "glob": "^7.1.3",
    "ioredis": "^4.9.0",
    "lodash": "^4.17.11",
    "nconf": "^0.10.0",
    "shortid": "^2.2.14",
    "socket.io": "^2.2.0",
    "source-map-support": "^0.5.12",
    "string-format": "^2.0.0",
    "vm2": "^3.8.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-subset": "^1.3.2",
    "@types/express": "^4.16.1",
    "@types/glob": "^7.1.1",
    "@types/ioredis": "^4.0.10",
    "@types/lodash": "^4.14.123",
    "@types/mocha": "^5.2.6",
    "@types/nconf": "^0.10.0",
    "@types/shortid": "0.0.29",
    "@types/socket.io": "^2.1.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "concurrently": "^4.1.0",
    "mocha": "^6.1.4",
    "mocha-typescript": "^1.1.17",
    "mochawesome": "^3.1.2",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.0.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.4.5"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
