{
    "compilerOptions": {
        "plugins": [
            { "name": "tslint-language-service" }
        ],
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}