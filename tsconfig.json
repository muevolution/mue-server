{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017"],
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    }
}